<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dit_brown</item>
        <item name="colorPrimaryDark">@color/dit_brown_dark</item>
        <item name="colorPrimaryVariant">@color/dit_brown_light</item>
        <item name="colorSecondary">@color/dit_teal</item>
        <item name="colorSecondaryVariant">@color/dit_teal_light</item>

        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
    </style>

    <style name="AppTheme.H1" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.H2" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.H3" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.H4" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.H5" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.H6" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Subtitle1" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Subtitle2" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Body1" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Body2" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Caption" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textSize">12sp</item>
    </style>

</resources>